
def build (bld) :
    bld.shlib(features = 'cxx',
            source = bld.path.ant_glob('*.cpp'),
            target = 'vb',
            includes = '.',
            install_path = 'libvb.dylib',
            export_incdirs = ('..', bld.path),
            use = 'FFTW3 FLTK cairo')
    bld.install_files ('${PREFIX}/include/vb', 'vb/*.h')

